<div class="col-md-10">
<div class="container">  
	<h1><%= @category %> </h1>
	<% @posts.each do |post| %>
	<% if post.category.include? @category %>
	
	<div class="well">
		<h3><%= link_to post.title, post %></h3>
		<p><%=  post.content.html_safe %> </p>
		<p> By: <%= link_to User.find(post.user_id).name, User.find(post.user_id) %></p>
		<%= link_to 'Show', post %>
		<% if post.user == current_user %>
       <%= link_to 'Edit', edit_post_path(post) %>
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
	</div>       
	 <% end %>
	<% end %>

	
  <% end %>
	<%= link_to 'Back', posts_path, class:"btn btn-success"%>
	</div>
	</div>
